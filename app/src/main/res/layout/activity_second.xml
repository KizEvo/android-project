<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="#c6e5f7"
    android:padding="35sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:id="@+id/circle2"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:backgroundTint="#ede8e8"
            android:clickable="false"
            android:background="@drawable/circle"
            android:src="@mipmap/clock" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="40sp">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quiz App"
            android:clickable="false"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="#5d7ef5"
            android:textSize="25sp" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Take Quiz"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:backgroundTint="#70cfff"
        android:layout_marginTop="15sp"
        android:paddingVertical="15sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="40sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="75sp"
                android:layout_height="75sp"
                android:background="@drawable/rectangle_left"
                android:backgroundTint="#70cfff"
                android:src='@mipmap/facebook'
                android:paddingVertical="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOGIN"
                android:background="@drawable/rectangle_right"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:paddingVertical="24sp"
                android:paddingRight="20sp"
                android:backgroundTint="#70cfff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="2sp"
            android:gravity="center">
            <ImageView
                android:layout_width="75sp"
                android:layout_height="75sp"
                android:background="@drawable/rectangle_left"
                android:backgroundTint="#ffbab3"
                android:src='@mipmap/google'
                android:paddingVertical="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOGIN"
                android:background="@drawable/rectangle_right"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:paddingVertical="24sp"
                android:paddingRight="20sp"
                android:backgroundTint="#ffbab3" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>