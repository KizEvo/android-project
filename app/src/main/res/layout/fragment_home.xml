<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context=".appUI.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/headerImageView"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:contentDescription="Header image"
                android:src="@drawable/mtb_header"/>
        </LinearLayout>

        <TextView
            android:id="@+id/welcomeTV"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Welcome User"
            android:textSize="25sp"
            android:textStyle="italic"
            android:textColor="#A06919"/>

        <VideoView
            android:id="@+id/videoViewBg"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:text="A Product of Group 4 \- Mobile Application Development Project"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="10sp"
            android:textColor="?attr/colorOnSurface"
            android:text="A Movie Ticket Booking Application on Android"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="10sp"
            android:textStyle="italic"
            android:textColor="?attr/colorOnSurface"
            android:text="Powered by Android Studio"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="App Description"
            android:textColor="#A06919"
            android:textSize="20sp"
            android:textStyle="bold" />
        <View
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#777777" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="?attr/colorOnSurface"
            android:textSize="16sp"
            android:text="@string/project_introduction"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="About Us"
            android:textColor="#A06919"
            android:textSize="20sp"
            android:textStyle="bold" />
        <View
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#777777" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_gravity="center"
            android:stretchColumns="1">

            <TableRow>
                <TextView
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface"
                    android:text="Student ID" />
                <TextView
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface"
                    android:text="Name" />
            </TableRow>

            <TableRow>
                <TextView
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface"
                    android:text="21200310" />
                <TextView
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface"
                    android:text="Lê Ngọc Long" />
            </TableRow>

            <TableRow>
                <TextView
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface"
                    android:text="21200328" />
                <TextView
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface"
                    android:text="Nguyễn Đức Phú" />
            </TableRow>
        </TableLayout>

    </LinearLayout>

</ScrollView>