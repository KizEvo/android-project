<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context=".appUI.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Featured Movies"
            android:textSize="20sp"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:requiresFadingEdge="horizontal"
            android:fadingEdgeLength="30dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/banner1"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="110dp"
                    android:layout_height="170dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/poster_86" />

                <ImageView
                    android:id="@+id/banner2"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="120dp"
                    android:layout_height="170dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/poster_josee" />

                <ImageView
                    android:id="@+id/banner3"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="120dp"
                    android:layout_height="170dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/poster_violet" />

                <ImageView
                    android:id="@+id/banner4"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="120dp"
                    android:layout_height="170dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/poster_yourname" />

                <ImageView
                    android:id="@+id/banner5"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="120dp"
                    android:layout_height="170dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/poster_yourlie" />
            </LinearLayout>
        </HorizontalScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="800dp"
            android:background="#E79797" />

    </LinearLayout>

</ScrollView>